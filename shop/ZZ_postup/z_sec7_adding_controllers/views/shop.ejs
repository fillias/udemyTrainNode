
<%- include('./includes/head.ejs') %>

    <link rel="stylesheet" href="/css/product.css">
</head>

<body>

<%- include('./includes/navigation.ejs') %>

    <main>
        

        <!-- ejs syntaxe (bez rovnitka) <% //blok kodu %>  se pouziva pro output bloku js vanilla kodu  
        taklze lze udelat blok s if else a na konci ho uzavrit
        -->
        <% if (prods.length > 0) { %>
            <h1>My Products</h1>
            <p>List of all the products...</p>
            <div class="grid">

                <!-- iterujeme produkty -->
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="https://cdn.knihcentrum.cz/98800078_kniha-rezervaci-kniha-rezervacii-2019.jpg" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$19.99</h2>
                            <p class="product__description">A very interesting book about so many even more interesting things!</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                <% } %>
            </div> 
        <% } else { %>
            <h1>no Products</h1>
        <% } %>
    </main>


<%- include('./includes/end.ejs') %>