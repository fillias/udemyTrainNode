
<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/product.css">
</head>

<body>

<%- include('../includes/navigation.ejs') %>

<main>
        

<!-- ejs syntaxe (bez rovnitka) <% //blok kodu %>  se pouziva pro output bloku js vanilla kodu  
taklze lze udelat blok s if else a na konci ho uzavrit
-->
<% if (prods.length > 0) { %>
    <h1>My Products</h1>
    <p>List of all the products...</p>
    <div class="grid">

        <!-- iterujeme produkty -->
        <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%= product.price %></h2>
                    <p class="product__description"><%= product.description %></p>
                </div>
                <div class="card__actions">
                    <a href="/admin/edit-product" class="btn">edit</button>
                    
                    <form action="/admin/delete-product" methot="POST">
                        <button class="btn" type="submit">delete</button>
                    </form>

                </div>
            </article>
        <% } %>
    </div> 
<% } else { %>
    <h1>no Products</h1>
<% } %>
</main>


<%- include('../includes/end.ejs') %>